<html>
    <head>
          <title>
            <%= title %>
          </title>
          <script src="https://kit.fontawesome.com/70414ba0e3.js" crossorigin="anonymous"></script>
          <link rel = "stylesheet" href = "/Css/Home.css">
    </head>
    <body>
        <h1 id="pageHeading">
         <i class= "fas fa-address-book"></i>
          My Contact List
        </h1>
         <div>
           <ul>
             <% for(let i of contact_list) { %>
                 <div class="contact">
                   <li>
                     <p><%= i.name %></p>
                     <p><%= i.phone %></p>
                   </li>
                 </div>
                 <div class = "delete-button">
                   <a href= "/delete-contact/?id=<%= i._id %>"> 
                    <i class="fas fa-window-close"></i>
                  </a>
                 </div>  
             <% } %>
           </ul>
             
         </div>
         <form action="/createContact" method="POST">
           <input type="text" name = "name" placeholder="Enter name" required>
           <input type="text" name = "phone" placeholder="Enter Phone number" required>
           <button type = "submit">Create Contact</button>
        </form>
    </body>
    <script type="text/javascript" href="/Js/Home.js"></script>
</html>
